{
  "compilerOptions": {
    "jsx": "react",
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@customTypes/*": [
        "./src/types/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@static/*": [
        "./src/static/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}